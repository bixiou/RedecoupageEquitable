alpha <- alpha + grades[i]  }
p <- 1 - alpha
q <- alpha - grades[i]
g <- i-3
if (g > -2 & g < 2) {
if (p*k > q*(1-k)) text = paste(g, "+ ", sep="")
else  text = paste(g, "- ", sep="")  }
else text = paste(g," ")
if (print & !return_text) print(paste(text, name, sep=""))
if (return_text) return(text)
else return(g + (p>q)*p - (p<=q)*q)
}
